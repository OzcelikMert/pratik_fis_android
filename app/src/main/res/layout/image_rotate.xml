<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#8591FC">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Plug_image"
            android:layout_width="320dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/backgrounds/scenic[19]" />

        <Button
            android:id="@+id/Rotate_btn"
            style="@android:style/Widget.DeviceDefault.Button.Toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/rotateText"
            tools:layout_weight="1" />

        <LinearLayout
            android:id="@+id/CancelOrOk_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Cancel_btn"
                style="@android:style/Widget.Button.Toggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight=".50"
                android:background="#F44336"
                android:text="@android:string/cancel" />

            <Button
                android:id="@+id/Ok_btn"
                style="@android:style/Widget.Button.Toggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight=".50"
                android:background="#00BCD4"
                android:text="@android:string/ok" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>